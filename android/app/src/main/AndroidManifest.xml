<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:name="com.example.nativernintegration.MyReactApplication"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.NativeRNIntegration"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".RActivity"
            android:exported="false"
            android:label="@string/title_activity_react"
            android:theme="@style/Theme.NativeRNIntegration" />
        <activity
            android:name=".PreLoginScreen"
            android:exported="false"
            android:label="@string/title_activity_pre_login_screen"
            android:theme="@style/Theme.NativeRNIntegration" />
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/Theme.NativeRNIntegration">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>